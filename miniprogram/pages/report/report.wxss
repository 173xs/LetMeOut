/* pages/report/report.wxss */
page{background-color:#f8f3f3;}
.signBox{width:6rpx;height:30rpx;float:left;background-color: #66ffff;margin:35rpx 20rpx;}

.reportTitleBox{width:710rpx;height:200rpx;margin:20rpx 20rpx 0;background:white;border-radius: 20rpx;}
.reportTtile{width:200rpx;height:100rpx;font-size:28rpx;float:left;line-height:100rpx;}
.titleText{width:670rpx;height:100rpx;margin:0 20rpx;clear:both;border-top:1px solid #f8f3f3;}
.titleText input{width:710rpx;height:100rpx;line-height:100rpx;font-size:24rpx;color:#808080;}

.reportDetailBox{width:710rpx;height:400rpx;margin:20rpx 20rpx 0;background:white;border-radius: 20rpx;}
.detailTtile{width:200rpx;height:100rpx;font-size:28rpx;float:left;line-height:100rpx;}
.detailText{width:670rpx;height:300rpx;margin:0 20rpx;clear:both;border-top:1px solid #f8f3f3;}
.detailText input{width:710rpx;min-height:100rpx;line-height:100rpx;font-size:24rpx;color:#808080;}

.submitBtn{width:710rpx;height:80rpx;margin:40rpx auto;background-color: #66ccff;border-radius: 20rpx;line-height:80rpx;color:white;font-size: 28rpx;}


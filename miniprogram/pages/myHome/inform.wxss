/* pages/inform/inform.wxss */
page{background-color:#f8f3f3;}
.informBox{width:670rpx;height:430rpx;margin:20rpx auto 0;background-color: white;border-radius:40rpx;padding:10rpx 20rpx;}
.informTitle{width:200rpx;height:80rpx;line-height:80rpx;font-size:36rpx;display:block;color:black}
.informLabel{width:630rpx;height:100rpx;line-height:50rpx;font-size:28rpx;text-indent: 2em;text-align:left;}
.informUrlBox{width:100%;height:150rpx;border:2rpx solid #c6c6c6;border-radius: 10rpx;margin-top:20rpx;}
.informUrlImage{width:80rpx;height:80rpx;float:left;margin:35rpx 20rpx;}
.informUrlDetail{width:530rpx;height:100rpx;margin-top:25rpx;float:left;}
.informUrlTitle{width:100%;height:50rpx;font-size:32rpx;}
.informUrlContent{width:100%;height:50rpx;}
.contentTitle{line-height:50rpx;font-size:24rpx;}
.contentDetail{line-height:50rpx;font-size:24rpx;color:#808080;margin-right:40rpx;}


.otherBox{width:100%;height:50rpx;margin-top:20rpx}
.informTime{height:50rpx;line-height:50rpx;color:#808080;float:left;font-size:24rpx;}
.deleteIcon{width:30rpx;height:30rpx;float:right;margin-top:10rpx}

.billListBox{width:100%;height:80rpx;}
.billListLabel{width:200rpx;float:left;text-align:right;height:100%;line-height:80rpx;font-size:32rpx;font-weight: bold;}
.billListText{width:420rpx;float:right;height:100%;line-height:80rpx;font-size:28rpx}

.billReason{width:500rpx;height:auto;line-height:50rpx;font-size:28rpx;margin:0 auto;text-indent: 2em;word-break: break-all;word-wrap: break-word;white-space: pre-line;}


.coverBillBox{width:100%;height:100%;position:absolute;top:0;left:0}
.coverGray{width:100%;height:100%;background-color: #808080;opacity: 0.5;position:absolute;top:0;left:0}
.showBillBox{width:650rpx;margin:0 auto;background-color: white;opacity: 1.0;position:absolute;top:50rpx;left:50rpx;padding-bottom: 50rpx;word-break: keep-all;word-wrap: break-word;white-space: pre-line;}
.BillTitle{width:200rpx;height:150rpx;line-height:150rpx;margin:0 auto;text-align:center}

.billListBox{width:100%;height:80rpx;}
.billListLabel{width:200rpx;float:left;text-align:right;height:100%;line-height:80rpx;font-size:32rpx;font-weight: bold;}
.billListText{width:420rpx;float:right;height:100%;line-height:80rpx;font-size:28rpx}
.emptyBox{width:100%}
.emptyBox image{width:400rpx;height:250rpx;margin:100rpx auto;display:block}
.emptyBox text{width:750rpx;line-height:100rpx;text-align:center;font-size:32rpx;color:#808080;display:block}